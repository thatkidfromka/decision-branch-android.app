<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/veroehnung"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questiontext1"
        android:text="@string/app_3_4_1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/black"/>


    <Button
        android:id="@+id/button_3_4_1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="I expect you to do more"
        android:visibility="visible" />


    <Button
        android:id="@+id/button_3_4_1_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You will cook and I will clean the house, deal?"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_3_4_1_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lets cook together"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_3_4_1_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I even do the dishes"
        android:visibility="visible" />
</LinearLayout>