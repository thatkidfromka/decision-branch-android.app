<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/car"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questiontext1"
        android:text="@string/app_3_3_1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/black"/>


    <Button
        android:id="@+id/button_3_3_1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="I am saving money for our holiday"
        android:visibility="visible" />


    <Button
        android:id="@+id/button_3_3_1_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I don't have money"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_3_3_1_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="if you pay, we can eat something else"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_3_3_1_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sell your girlfriend to the shop owner for a free kebab"
        android:visibility="visible" />
</LinearLayout>
