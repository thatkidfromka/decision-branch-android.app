<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/veroehnung" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questiontext1"
        android:text="@string/app_3_4_2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/black"/>


    <Button
        android:id="@+id/button_3_4_2_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="I know, I am sorry"
        android:visibility="visible" />


    <Button
        android:id="@+id/button_3_4_2_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="please don't stress me"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_3_4_2_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="you didn't even care"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_3_4_2_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="can you just make the food?"
        android:visibility="visible" />
</LinearLayout>