<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/differentrestaurants"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questiontext1"
        android:text="@string/app_2_3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/black"/>


    <Button
        android:id="@+id/button_2_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Kebab 10€"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_2_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:text="Skyline Restaurant 100€"
        android:visibility="visible" />


    <Button
        android:id="@+id/button_2_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="drive around without plan 0€"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_2_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="neighborhood restaurant 50€"
        android:visibility="visible" />

</LinearLayout>