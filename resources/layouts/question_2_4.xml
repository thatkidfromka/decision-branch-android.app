<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/macho"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questiontext1"
        android:text="@string/app_2_4"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/black"/>


    <Button
        android:id="@+id/button_2_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="sorry everybody has their part to do"
        android:visibility="visible" />



    <Button
        android:id="@+id/button_2_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sorry I just had a busy day, I am too tired"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_2_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I have to feed a pig"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_2_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="That was just a joke"
        android:visibility="visible" />

</LinearLayout>