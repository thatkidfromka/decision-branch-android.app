<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/question3_4_4"
        app:srcCompat="@android:drawable/ic_menu_help"
        app:tint="@android:color/holo_blue_bright" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questiontext1"
        android:text="@string/app_3_4_4"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/black"/>


    <Button
        android:id="@+id/button_3_4_4_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Then we might not click"
        android:visibility="visible" />


    <Button
        android:id="@+id/button_3_4_4_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="now I am joking again. make the food"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_3_4_4_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I was really just kidding, I already cooked for us"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_3_4_4_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="no reply"
        android:visibility="visible" />
</LinearLayout>