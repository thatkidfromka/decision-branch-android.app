<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/fancy"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questiontext1"
        android:text="@string/app_3_1_1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/black"/>


    <Button
        android:id="@+id/button_3_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:text="slimy"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_3_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="3"
        android:text="charming"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_3_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:text="propose wedding"
        android:visibility="visible" />


    <Button
        android:id="@+id/button_3_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="girlfriend flirts with the cook"
        android:visibility="visible" />
</LinearLayout>